<h2 class="mt-0 mb-4 p-2 primary-color text-white text-center">Add a New Transaction</h2>
<div class="container ">
  
  <%= form_for @transaction, url: category_transactions_path(@category) do |f| %>
    <div class="form-group ">
      <%= f.text_field :name, placeholder: "Name", class: 'form-control no-border-radius', required: true %>
    </div>
    
    <div class="form-group">
      <%= f.text_field :amount, placeholder: "Amount", class: 'form-control no-border-radius', required: true %>
    </div>

    <div class="form-group">
      <%= f.collection_select :category_ids, Category.all, :id, :name, {  }, { multiple: true, class: 'form-control no-border-radius' } %>
    </div>

      <div class = "row text-center">
        <div class = "col m-1">
        <%= f.submit "Save", class: 'btn btn-end secondary-color' %>
        </div>
      </div>
      <div class = "row text-center">
        <div class = "col m-1">
        <%= link_to "Back", category_transactions_path(@category), class: 'btn btn-end primary-color ml-2 back-link' %>
         </div> 
      </div>
  <% end %>
</div>
