<div class="container">
  <h2 class="my-4 text-color headline">Transactions for <%= @category.name %></h2>
  <p class="text-color general-text">Total Amount: <%= @total_amount %></p>
<ul class="list-group">
  <% @budget_transactions.each do |transaction| %>
    <li class="list-group-item d-flex justify-content-between category-item align-items-center">
      <div class="d-flex align-items-center">
        <span class="transaction-name text-color general-text"><%= transaction.name %></span>
      </div>
      <span class="text-color general-text">Amount: <%= transaction.amount %></span>
    </li>
  <% end %>
</ul>


  <%= link_to "Add", new_category_transaction_path(@category), class: 'btn secondary-color my-4' %>
  <%= link_to "Back", categories_path, class: 'btn primary-color' %>
</div>
